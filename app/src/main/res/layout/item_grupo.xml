<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_margin="20dp"
    app:cardMaxElevation="12dp"
    android:elevation="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/accionesPocketSchool"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grupo"
                android:textColor="@color/fuente1PocketSchool"
                android:textSize="30sp"
                android:layout_gravity="start"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/txtTituloTarea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titulo tarea"
                    android:textSize="30dp"
                    android:paddingLeft="10dp">
                </TextView>
                <TextView
                    android:id="@+id/txtDescrTarea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="210dp"
                    android:text="DescripciÃ³n de la tarea"
                    android:textSize="20dp"
                    android:layout_gravity="center">
                </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtFechaTarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Fecha tarea"

                    android:textSize="17dp">

                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>